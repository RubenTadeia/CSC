<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="brunoc.csc.ist.pt.csc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="24" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/locator"
        android:label="SecLoc"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="brunoc.csc.ist.pt.csc.MainActivity"
            android:label="SecLoc"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="brunoc.csc.ist.pt.csc.PreferencesActivity" />
        <activity android:name="brunoc.csc.ist.pt.csc.LoginActivity" />
        <activity android:name="brunoc.csc.ist.pt.csc.RegisterActivity" />
        <activity android:name="brunoc.csc.ist.pt.csc.FollowingActivity" />
    </application>

</manifest>